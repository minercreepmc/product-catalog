{
  "name": "product-catalog",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "up": "docker compose -f ./docker-compose.dev.yml up -d",
    "down": "docker compose -f ./docker-compose.dev.yml down",
    "app": "docker logs product-catalog --follow",
    "app-run": "docker exec -it product-catalog npm run",
    "database": "docker exec -it product-catalog-database bash",
    "generate-client": "openapi-generator-cli generate -i ./config/swagger/swagger.json -g typescript-fetch -o ./api/product-catalog-client",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli",
    "migration:generate": "npm run typeorm -- -d ./src/configs/typeorm/typeorm.data-source.ts migration:generate ./src/core/product/adapters/database/migrations/$npm_config_name",
    "migration:up": "npm run typeorm migration:run -- -d ./config/typeorm/typeorm.data-source.ts",
    "migration:down": "npm run typeorm -- -d ./config/typeorm/typeorm.data-source.ts migration:revert",
    "schema:drop": "npm run typeorm -- -d ./config/typeorm/typeorm.data-source.ts schema:drop",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "unit-test": "jest ./tests/unit",
    "e2e-test": "docker compose -f docker-compose.e2e.yml up --abort-on-container-exit",
    "integration-test": "docker compose -f docker-compose.integration.yml up --abort-on-container-exit",
    "test": "jest --forceExit",
    "test:unit": "jest ./tests/unit",
    "test:e2e": "jest ./tests/e2e",
    "test:integration": "jest ./tests/integration",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.0.0",
    "@nestjs/cqrs": "^9.0.3",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/swagger": "^6.2.1",
    "@nestjs/typeorm": "^9.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "common-base-classes": "0.21.16",
    "nest-typeorm-common-classes": "0.0.21",
    "oxide.ts": "^1.1.0",
    "pg": "^8.10.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "swagger-ui-express": "^4.6.2",
    "typeorm": "^0.3.12",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@openapitools/openapi-generator-cli": "^2.6.0",
    "@types/express": "^4.17.13",
    "@types/jest": "28.1.8",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@types/uuidv4": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.1.3",
    "jest-extended": "^3.2.4",
    "jest-html-reporter": "^3.7.1",
    "jest-mock-extended": "^3.0.3",
    "markdown-table-formatter": "^1.4.0",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.8",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.0",
    "typescript": "^4.7.4"
  }
}
