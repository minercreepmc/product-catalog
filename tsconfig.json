{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "resolveJsonModule": true,
    "types": [
      "jest",
      "jest-extended"
    ],
    "paths": {
      "@config": [
        "./config"
      ],
      "@config/*": [
        "./config/*"
      ],
      "@product-domain": [
        "./src/core/product/domain"
      ],
      "@product-domain/*": [
        "./src/core/product/domain/*"
      ],
      "@product-use-case": [
        "./src/core/product/use-case"
      ],
      "@product-use-case/*": [
        "./src/core/product/use-case/*"
      ],
      "@product-infrastructure": [
        "./src/core/product/infrastructures"
      ],
      "@product-infrastructure/*": [
        "./src/core/product/infrastructures/*"
      ],
      "@category-domain": [
        "./src/core/category/domain"
      ],
      "@category-domain/*": [
        "./src/core/category/domain/*"
      ],
      "@reviewer-domain": [
        "./src/core/reviewer/domain"
      ],
      "@reviewer-domain/*": [
        "./src/core/reviewer/domain/*"
      ],
      "@reviewer-use-case": [
        "./src/core/reviewer/domain"
      ],
      "@reviewer-use-case/*": [
        "./src/core/reviewer/use-case/*"
      ],
      "@reviewer-infrastructure": [
        "./src/core/reviewer/infrastructures"
      ],
      "@reviewer-infrastructure/*": [
        "./src/core/reviewer/infrastructures/*"
      ],
      "@common-domain": [
        "./src/core/common/domain"
      ],
      "@common-domain/*": [
        "./src/core/common/domain/*"
      ],
      "@common-use-case": [
        "./src/core/common/use-case"
      ],
      "@common-use-case/*": [
        "./src/core/common/use-case/*"
      ],
      "@src": [
        "./src"
      ],
      "@src/*": [
        "./src/*"
      ],
      "@utils": [
        "./utils"
      ],
      "@utils/*": [
        "./utils/*"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "./tests/**/*",
    "./config/**/*",
    "./utils/**/*",
    "./jest.config.ts",
    "./tsconfig.json"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
