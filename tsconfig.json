{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18 + ESM + Strictest",
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "es2022",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importsNotUsedAsValues": "error",
    "checkJs": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@config": ["./config"],
      "@config/*": ["./config/*"],
      "@guards": ["./src/v2/guards"],
      "@guards/*": ["./src/v2/guards/*"],
      "@validators": ["./src/v2/validators"],
      "@validators/*": ["./src/v2/validators/*"],
      "@constants": ["./src/v2/constants"],
      "@constants/*": ["./src/v2/constants/*"],
      "@base-class": ["./src/v2/base"],
      "@base-class/*": ["./src/v2/base/*"],
      "@interceptors": ["./src/v2/interceptors"],
      "@interceptors/*": ["./src/v2/interceptors/*"],
      "@v2": ["./src/v2/modules"],
      "@v2/*": ["./src/v2/modules/*"],
      "@rules": ["./src/v2/rules"],
      "@rules/*": ["./src/v2/rules/*"],
      "@src": ["./src"],
      "@src/*": ["./src/*"],
      "@base": ["./utils/base"],
      "@base/*": ["./utils/base/*"],
      "@utils": ["./utils"],
      "@utils/*": ["./utils/*"],
      "@util": ["./src/v2/utils"],
      "@util/*": ["./src/v2/utils/*"],
      "@shared": ["./shared"],
      "@shared/*": ["./shared/*"]
    }
  },
  "include": [
    "./src/**/*",
    "./tests/**/*",
    "./config/**/*",
    "./utils/**/*",
    "./shared/**/*",
    "./jest.config.ts",
    "./tsconfig.json",
    "./.eslintrc"
  ],
  "exclude": ["node_modules", "dist"]
}
